{
  "settings": {
    "ecmascript": 6,
    "jsx": true
  },
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "global-strict": true,
    "semi": false,
    "no-use-before-define": false,

    "no-unused-vars is false because of jsx parsing limitation": "https://github.com/eslint/eslint/issues/1534",
    "no-unused-vars": false
  },

}
